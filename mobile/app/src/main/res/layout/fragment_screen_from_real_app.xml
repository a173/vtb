<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_from_app"
    tools:context=".fragment.ScreenFromRealAppFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="415dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnExpress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            style="@style/MainStyleText"
            android:textColor="@color/white_black"
            android:background="@drawable/background_for_button"
            android:text="@string/express" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNoExpress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            style="@style/MainStyleText"
            android:textColor="@color/white_black"
            android:background="@drawable/background_for_button"
            android:text="@string/not_express" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>